<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/background_syllabus_item_border"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_syllabus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textColor="@color/syllabus_item_bg"
            android:drawableLeft="@drawable/ic_hw_dw_title"
            android:drawableRight="@drawable/ic_hw_dw_title"
            android:drawableTint="@color/syllabus_item_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="Syllabus Title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_class_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_hw_dw_uploader"
                android:drawablePadding="5dp"
                android:drawableTint="@color/syllabus_item_bg"
                android:gravity="start|center_vertical"
                android:padding="5dp"
                android:text="Purvik Rana"
                android:visibility="invisible"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_subject_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_hw_dw_deadline"
                android:drawableTint="@color/syllabus_item_bg"
                android:gravity="end|center_vertical"
                android:padding="5dp"
                android:text="25/02/2018"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_syllabus_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Syllabus Desc"
            android:gravity="center"
            android:textSize="12sp" />


        <Button
            android:id="@+id/btnFileDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_margin="2dp"
            android:text="@string/btn_label_download"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible"  />

    </LinearLayout>
</android.support.v7.widget.CardView>

