<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_marginTop="-10dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_accent_color_border"
        android:padding="8dp">


        <TextView
            android:id="@+id/tvDOJTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/tvDOJTitle"
            android:textColor="@color/caldroid_555"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@id/tvDesignationTitle"
            app:layout_constraintHorizontal_weight="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDOJ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antic"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="12/03/2018"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/tvDOJTitle"
            app:layout_constraintStart_toStartOf="@id/tvDOJTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvDOJTitle" />

        <TextView
            android:id="@+id/tvDesignationTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/tvDesignationTitle"
            android:textColor="@color/caldroid_555"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/tvDOJTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDesignation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antic"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Class Teacher"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/tvDesignationTitle"
            app:layout_constraintStart_toStartOf="@id/tvDesignationTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvDesignationTitle" />

        <TextView
            android:id="@+id/tvPhoneTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/tvPhoneTitle"
            android:textColor="@color/caldroid_555"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@id/tvEmailTitle"
            app:layout_constraintHorizontal_weight="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDOJ" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antic"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="9998970653"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/tvPhoneTitle"
            app:layout_constraintStart_toStartOf="@id/tvPhoneTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvPhoneTitle" />

        <TextView
            android:id="@+id/tvEmailTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/tvEmailTitle"
            android:textColor="@color/caldroid_555"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/tvPhoneTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvDesignation" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/antic"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="12/03/2018"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvPhone"
            app:layout_constraintTop_toBottomOf="@+id/tvEmailTitle" />

        <View
            android:id="@+id/activeView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>